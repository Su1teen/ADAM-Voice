}

.glass-panel::after {
  content: '';
  position: absolute;
  top: 0;
  left: -100%;
  width: 100%;
  height: 100%;
  background: linear-gradient(90deg, 
    transparent 0%, 
    rgba(255, 255, 255, 0.1) 50%, 
    transparent 100%);
  transition: left 0.6s ease;
  pointer-events: none;
}

.glass-panel:hover::after {
  left: 100%;
}

.glass-button {
  background: var(--glass-gradient);
  backdrop-filter: var(--blur);
  -webkit-backdrop-filter: var(--blur);
  border: 1px solid var(--border-glass);
  border-radius: 20px;
  transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
  position: relative;
  overflow: hidden;
  box-shadow: var(--shadow), 
    inset 0 1px 0 rgba(255, 255, 255, 0.12);
}

.glass-button::before {
  content: '';
  position: absolute;
  top: -50%;
  left: -50%;
  width: 200%;
  height: 200%;
  background: radial-gradient(circle, 
    rgba(255, 255, 255, 0.15) 0%, 
    transparent 70%);
  transform: scale(0);
  transition: transform 0.6s ease;
  pointer-events: none;
}

.glass-button:hover {
  background: var(--glass-gradient-hover);
  border-color: var(--border-light);
  transform: translateY(-3px) scale(1.02);
  box-shadow: var(--shadow-strong), 
    0 15px 45px rgba(0, 0, 0, 0.25),
    inset 0 1px 0 rgba(255, 255, 255, 0.2);
}

.glass-button:hover::before {
  transform: scale(1);
}

.glass-button:active {
  transform: translateY(-1px) scale(0.98);
  background: linear-gradient(135deg, 
    rgba(255, 255, 255, 0.2) 0%, 
    rgba(255, 255, 255, 0.1) 50%,
    rgba(0, 122, 255, 0.1) 100%);
}

.glass-circle {
  background: radial-gradient(circle at 30% 20%, 
    rgba(255, 255, 255, 0.15) 0%, 
    rgba(255, 255, 255, 0.08) 30%,
    rgba(0, 122, 255, 0.12) 60%,
    rgba(255, 255, 255, 0.05) 100%);
  backdrop-filter: var(--blur-extreme);
  -webkit-backdrop-filter: var(--blur-extreme);
  border: 2px solid var(--border-strong);
  position: relative;
  overflow: hidden;
  box-shadow: var(--shadow-strong),
    inset 0 2px 0 rgba(255, 255, 255, 0.2),
    inset 0 -2px 0 rgba(0, 0, 0, 0.1);
}

.glass-circle::before {
  content: '';
  position: absolute;
  top: -30%;
  left: -30%;
  width: 160%;
  height: 160%;
  background: conic-gradient(from 0deg, 
    transparent 0deg, 
    rgba(255, 255, 255, 0.2) 60deg, 
    transparent 120deg, 
    rgba(0, 122, 255, 0.15) 180deg, 
    transparent 240deg, 
    rgba(255, 255, 255, 0.1) 300deg, 
    transparent 360deg);
  animation: spin 20s linear infinite;
  opacity: 0;
  transition: opacity 0.6s ease;
}

.glass-circle:hover::before {
  opacity: 1;
}

.glass-circle::after {
  content: '';
  position: absolute;
  top: 10%;
  left: 10%;
  width: 80%;
  height: 80%;
  background: radial-gradient(circle at 30% 30%, 
    rgba(255, 255, 255, 0.3) 0%, 
    rgba(255, 255, 255, 0.1) 50%, 
    transparent 100%);
  border-radius: 50%;
  pointer-events: none;
}

@keyframes spin {
  from { transform: rotate(0deg); }
  to { transform: rotate(360deg); }
}

/* Advanced Glass Surface Effects */
.glass-surface {
  background: linear-gradient(135deg,
    rgba(255, 255, 255, 0.08) 0%,
    rgba(255, 255, 255, 0.02) 25%,
    rgba(0, 122, 255, 0.04) 50%,
    rgba(255, 255, 255, 0.01) 75%,
    rgba(255, 255, 255, 0.06) 100%);
  backdrop-filter: blur(30px) saturate(1.5);
  -webkit-backdrop-filter: blur(30px) saturate(1.5);
  border: 1px solid rgba(255, 255, 255, 0.1);
  box-shadow: 
    0 8px 32px rgba(0, 0, 0, 0.3),
    inset 0 1px 0 rgba(255, 255, 255, 0.1),
    inset 0 -1px 0 rgba(0, 0, 0, 0.1);
}

/* iOS 26 Displacement Map Effects and Blurring Masks */
.displacement-mask {
  position: relative;
  overflow: hidden;
}

.displacement-mask::before {
  content: '';
  position: absolute;
  inset: -10px;
  background: 
    radial-gradient(circle at 20% 30%, rgba(255, 255, 255, 0.1) 0%, transparent 50%),
    radial-gradient(circle at 80% 70%, rgba(0, 122, 255, 0.08) 0%, transparent 50%),
    radial-gradient(circle at 40% 80%, rgba(255, 255, 255, 0.06) 0%, transparent 50%);
  filter: blur(1px);
  animation: displacement-drift 15s ease-in-out infinite;
  pointer-events: none;
  z-index: -1;
}

@keyframes displacement-drift {
  0%, 100% {
    transform: translate(0, 0) scale(1) rotate(0deg);
    filter: blur(1px) hue-rotate(0deg);
  }
  25% {
    transform: translate(5px, -3px) scale(1.02) rotate(0.5deg);
    filter: blur(1.5px) hue-rotate(5deg);
  }
  50% {
    transform: translate(-3px, 4px) scale(0.98) rotate(-0.3deg);
    filter: blur(0.8px) hue-rotate(-3deg);
  }
  75% {
    transform: translate(2px, -2px) scale(1.01) rotate(0.2deg);
    filter: blur(1.2px) hue-rotate(2deg);
  }
}

/* Advanced Blurring Mask System */
.blur-mask {
  position: relative;
  backdrop-filter: blur(30px) saturate(1.8) brightness(1.1);
  -webkit-backdrop-filter: blur(30px) saturate(1.8) brightness(1.1);
}

.blur-mask::after {
  content: '';
  position: absolute;
  inset: 0;
  background: linear-gradient(135deg,
    rgba(255, 255, 255, 0.12) 0%,
    rgba(255, 255, 255, 0.04) 25%,
    rgba(0, 122, 255, 0.06) 50%,
    rgba(255, 255, 255, 0.03) 75%,
    rgba(255, 255, 255, 0.1) 100%);
  border-radius: inherit;
  pointer-events: none;
  mask: linear-gradient(45deg, black 60%, transparent 100%);
  -webkit-mask: linear-gradient(45deg, black 60%, transparent 100%);
}

/* Liquid Distortion Effects */
.liquid-distortion {
  position: relative;
  filter: url(#liquid-filter);
}

.liquid-distortion::before {
  content: '';
  position: absolute;
  inset: -5px;
  background: conic-gradient(from 0deg at 50% 50%,
    rgba(0, 122, 255, 0.1) 0deg,
    rgba(255, 255, 255, 0.08) 60deg,
    rgba(0, 122, 255, 0.06) 120deg,
    rgba(255, 255, 255, 0.04) 180deg,
    rgba(0, 122, 255, 0.08) 240deg,
    rgba(255, 255, 255, 0.1) 300deg,
    rgba(0, 122, 255, 0.1) 360deg);
  border-radius: inherit;
  animation: liquid-rotate 20s linear infinite;
  z-index: -1;
  opacity: 0.6;
}

@keyframes liquid-rotate {
  from { transform: rotate(0deg) scale(1); }
  50% { transform: rotate(180deg) scale(1.05); }
  to { transform: rotate(360deg) scale(1); }
}

/* Advanced Glass Morphing */
.morph-glass {
  background: linear-gradient(135deg,
    rgba(255, 255, 255, 0.1) 0%,
    rgba(255, 255, 255, 0.05) 20%,
    rgba(0, 122, 255, 0.08) 40%,
    rgba(255, 255, 255, 0.03) 60%,
    rgba(255, 255, 255, 0.07) 80%,
    rgba(0, 122, 255, 0.1) 100%);
  backdrop-filter: blur(25px) contrast(1.1) brightness(1.05);
  -webkit-backdrop-filter: blur(25px) contrast(1.1) brightness(1.05);
  border: 1px solid rgba(255, 255, 255, 0.15);
  position: relative;
  overflow: hidden;
}

.morph-glass::before {
  content: '';
  position: absolute;
  inset: 0;
  background: radial-gradient(circle at var(--mouse-x, 50%) var(--mouse-y, 50%),
    rgba(255, 255, 255, 0.15) 0%,
    rgba(255, 255, 255, 0.05) 30%,
    transparent 60%);
  opacity: 0;
  transition: opacity 0.3s ease;
  pointer-events: none;
}

.morph-glass:hover::before {
  opacity: 1;
}

/* Depth Field Blur */
.depth-blur {
  position: relative;
}

.depth-blur::after {
  content: '';
  position: absolute;
  inset: 0;
  background: inherit;
  filter: blur(8px) brightness(1.2);
  z-index: -1;
  transform: scale(1.1);
  opacity: 0.3;
}

/* Enhanced Glass Panels for True iOS 26 */
.glass-panel-advanced {
  background: var(--glass-gradient);
  backdrop-filter: blur(40px) saturate(1.8) brightness(1.1);
  -webkit-backdrop-filter: blur(40px) saturate(1.8) brightness(1.1);
  border: 1px solid var(--border-strong);
  border-radius: 32px;
  box-shadow: 
    var(--shadow-strong),
    inset 0 1px 0 rgba(255, 255, 255, 0.2),
    inset 0 -1px 0 rgba(0, 0, 0, 0.1),
    0 0 0 1px rgba(255, 255, 255, 0.05);
  position: relative;
  overflow: hidden;
}

.glass-panel-advanced::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  height: 2px;
  background: linear-gradient(90deg,
    transparent 0%,
    rgba(255, 255, 255, 0.6) 20%,
    rgba(0, 122, 255, 0.4) 50%,
    rgba(255, 255, 255, 0.6) 80%,
    transparent 100%);
  opacity: 0.8;
}

.glass-panel-advanced::after {
  content: '';
  position: absolute;
  top: -50%;
  left: -50%;
  width: 200%;
  height: 200%;
  background: conic-gradient(from 0deg,
    transparent 0deg,
    rgba(255, 255, 255, 0.03) 90deg,
    transparent 180deg,
    rgba(0, 122, 255, 0.02) 270deg,
    transparent 360deg);
  animation: slow-spin 30s linear infinite;
  pointer-events: none;
}

@keyframes slow-spin {
  from { transform: rotate(0deg); }
  to { transform: rotate(360deg); }
}

/* Enhanced mobile scroll fix and touch optimization */
@media (max-width: 768px) {
  * {
    -webkit-overflow-scrolling: touch;
    touch-action: manipulation;
  }
  
  html {
    height: 100%;
    overflow: hidden;
  }
  
  body {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    overflow: hidden;
    -webkit-overflow-scrolling: touch;
  }
  
  .mobile-scroll-container {
    height: 100vh;
    height: 100dvh; /* Dynamic viewport height */
    overflow-y: auto;
    overflow-x: hidden;
    -webkit-overflow-scrolling: touch;
    scroll-behavior: smooth;
    overscroll-behavior: contain;
    position: relative;
  }
  
  /* Prevent zoom on double tap */
  button, input, textarea {
    touch-action: manipulation;
  }
  
  /* Ensure proper scroll for modal panels */
  .glass-panel {
    overscroll-behavior: contain;
  }
}

/* iOS-specific scroll fixes */
@supports (-webkit-touch-callout: none) {
  .mobile-scroll-container {
    -webkit-overflow-scrolling: touch;
    overflow-y: scroll;
    transform: translateZ(0);
    -webkit-transform: translateZ(0);
  }
  
  body {
    position: fixed;
    overflow: hidden;
  }
  
  /* Force hardware acceleration */
  .glass-panel, .glass-button, .glass-circle {
    transform: translateZ(0);
    -webkit-transform: translateZ(0);
    will-change: transform;
  }
}