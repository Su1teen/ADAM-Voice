/* PROFESSIONAL APPLE LIQUID GLASS COMPONENTS */
/* ============================================ */

/* Main Glass Panel - Ultra Refined */
.glass-panel {
  background: var(--glass-gradient);
  backdrop-filter: var(--blur-strong) saturate(180%) brightness(105%);
  -webkit-backdrop-filter: var(--blur-strong) saturate(180%) brightness(105%);
  border: 0.5px solid var(--border-base);
  border-radius: 24px;
  box-shadow: 
    var(--shadow-lg),
    inset 0 0.5px 0.5px rgba(255, 255, 255, 0.12),
    inset 0 -0.5px 0.5px rgba(0, 0, 0, 0.08);
  position: relative;
  overflow: hidden;
  transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
}

.glass-panel::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  height: 1px;
  background: linear-gradient(90deg, 
    transparent 0%, 
    rgba(255, 255, 255, 0.25) 50%, 
    transparent 100%);
  opacity: 0.6;
  pointer-events: none;
}

.glass-panel:hover {
  background: var(--glass-gradient-hover);
  border-color: var(--border-medium);
  box-shadow: 
    var(--shadow-xl),
    inset 0 0.5px 0.5px rgba(255, 255, 255, 0.18);
}

/* Professional Glass Button */
.glass-button {
  background: var(--glass-gradient);
  backdrop-filter: var(--blur-medium) saturate(180%);
  -webkit-backdrop-filter: var(--blur-medium) saturate(180%);
  border: 0.5px solid var(--border-base);
  border-radius: 16px;
  padding: 12px 24px;
  font-size: 15px;
  font-weight: 500;
  letter-spacing: -0.022em;
  color: var(--text-primary);
  transition: all 0.25s cubic-bezier(0.4, 0, 0.2, 1);
  position: relative;
  overflow: hidden;
  cursor: pointer;
  box-shadow: var(--shadow-sm), inset 0 0.5px 0 rgba(255, 255, 255, 0.12);
}

.glass-button::before {
  content: '';
  position: absolute;
  inset: 0;
  background: radial-gradient(circle at 50% 50%, 
    rgba(255, 255, 255, 0.1) 0%, 
    transparent 60%);
  opacity: 0;
  transition: opacity 0.3s ease;
  pointer-events: none;
}

.glass-button:hover {
  background: var(--glass-gradient-hover);
  border-color: var(--border-medium);
  transform: translateY(-1px);
  box-shadow: 
    var(--shadow-md), 
    inset 0 0.5px 0 rgba(255, 255, 255, 0.2);
}

.glass-button:hover::before {
  opacity: 1;
}

.glass-button:active {
  transform: translateY(0) scale(0.98);
  transition-duration: 0.1s;
}

/* Accent Button (Primary Action) */
.glass-button-accent {
  background: linear-gradient(135deg,
    rgba(10, 132, 255, 0.85) 0%,
    rgba(10, 132, 255, 0.75) 100%);
  border: 0.5px solid rgba(10, 132, 255, 0.5);
  color: #ffffff;
  font-weight: 600;
}

.glass-button-accent:hover {
  background: linear-gradient(135deg,
    rgba(10, 132, 255, 0.95) 0%,
    rgba(10, 132, 255, 0.85) 100%);
  box-shadow: var(--glow-blue), var(--shadow-md);
}

/* Professional Glass Circle (Voice Visualizer) */
.glass-circle {
  background: radial-gradient(circle at 30% 30%, 
    rgba(255, 255, 255, 0.12) 0%, 
    rgba(255, 255, 255, 0.06) 50%,
    rgba(255, 255, 255, 0.04) 100%);
  backdrop-filter: var(--blur-ultra) saturate(180%);
  -webkit-backdrop-filter: var(--blur-ultra) saturate(180%);
  border: 1px solid var(--border-medium);
  box-shadow: 
    var(--shadow-xl),
    inset 0 1px 1px rgba(255, 255, 255, 0.15),
    inset 0 -1px 1px rgba(0, 0, 0, 0.08);
  position: relative;
  overflow: hidden;
  transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
}

.glass-circle::before {
  content: '';
  position: absolute;
  top: 10%;
  left: 10%;
  width: 50%;
  height: 50%;
  background: radial-gradient(circle, 
    rgba(255, 255, 255, 0.25) 0%, 
    transparent 70%);
  border-radius: 50%;
  filter: blur(12px);
  pointer-events: none;
}

.glass-circle.active {
  border-color: var(--accent-blue);
  box-shadow: 
    var(--glow-blue-strong),
    var(--shadow-xl),
    inset 0 1px 1px rgba(10, 132, 255, 0.3);
}

/* Glass Surface (Flat Panel) */
.glass-surface {
  background: var(--glass-gradient);
  backdrop-filter: var(--blur-medium) saturate(160%);
  -webkit-backdrop-filter: var(--blur-medium) saturate(160%);
  border: 0.5px solid var(--border-thin);
  box-shadow: var(--shadow-sm), inset 0 0.5px 0 rgba(255, 255, 255, 0.08);
}

/* Glass Input Field */
.glass-input {
  background: var(--glass-light);
  backdrop-filter: var(--blur-light);
  -webkit-backdrop-filter: var(--blur-light);
  border: 0.5px solid var(--border-base);
  border-radius: 12px;
  padding: 10px 16px;
  font-size: 15px;
  color: var(--text-primary);
  transition: all 0.2s ease;
  outline: none;
}

.glass-input::placeholder {
  color: var(--text-tertiary);
}

.glass-input:focus {
  background: var(--glass-base);
  border-color: var(--accent-blue);
  box-shadow: 0 0 0 3px rgba(10, 132, 255, 0.15);
}

/* Professional Card Container */
.glass-card {
  background: var(--glass-gradient);
  backdrop-filter: var(--blur-strong) saturate(180%);
  -webkit-backdrop-filter: var(--blur-strong) saturate(180%);
  border: 0.5px solid var(--border-base);
  border-radius: 20px;
  padding: 20px;
  box-shadow: var(--shadow-md);
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
}

.glass-card:hover {
  transform: translateY(-2px);
  box-shadow: var(--shadow-lg);
  border-color: var(--border-medium);
} 
